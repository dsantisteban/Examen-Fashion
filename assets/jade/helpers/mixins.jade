mixin imgoricon(inspan)
	if inspan==0
		img(src="assets/images/flag1.png", alt="")
	else if inspan==1 
		span.fa.fa-usd
	else
		span.fa.fa-user
mixin list1(inspan, texto)
	li
		ul.list-unstyled.list-inline
			li
				+imgoricon(inspan)
			li.pd-0
				a(href="#")
					h6= texto	   	
			li.pd-0
				a(href="#")
					span.fa.fa-angle-down
mixin addimg(img)
		img.img-responsive(src="assets/images/"+ img, alt="")
mixin carousel(img,tachado,box1,down)
	.col-xs-3
		.thumb
			block append product
				if box1==1
					.boxnew
						h6 SALE
				if box1==2
					.boxsale
						h6 NEW
				else if box1==3
					.boxnew
						h6 SALE
					.boxsale
						h6 NEW	
				+addimg(img)
			block append description
				h5 Deliver Wide
				if down==0
					i.fa.fa-star
					i.fa.fa-star
					i.fa.fa-star
					i.fa.fa-star-o
					i.fa.fa-star-o
					ul.list-unstyled.list-inline
						if tachado==0
							li.price-red $ 218.00
						else 
							li.tachado $ 242.00
							li.price-red $ 218.00
				else
					ul.list-unstyled.list-inline
						if tachado==0
							li.price-red $ 218.00
						else 
							li.tachado $ 242.00
							li.price-red $ 218.00
					i.fa.fa-star
					i.fa.fa-star
					i.fa.fa-star
					i.fa.fa-star-o
					i.fa.fa-star-o

mixin clothing(img,tachado,box1,down)
	.col-md-4.col-xs-6
		.media
			.col-md-6.col-xs-6.text.center
				.thumb
					append product
			.col-md-6.col-xs-6
				append description
