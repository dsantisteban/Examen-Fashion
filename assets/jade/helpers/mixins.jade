mixin listfooter(texto1,stexto1,stexto2,stexto3,stexto4)
	.col-md-2
		h5= texto1
		ul.list-unstyled
			li
				h6
					i.fa(class="fa-caret-right")
					span= stexto1
			li
				h6
					i.fa(class="fa-caret-right")
					span= stexto2
			li
				h6
					i.fa(class="fa-caret-right")
					span= stexto3
			li
				h6
					i.fa(class="fa-caret-right")
					span= stexto4
mixin title(li,icon1,texto1,texto2,texto3,icon2)
	.row
		if li==3
			.col-md-5.col-xs-5
				hr
			.col-md-2.col-xs-2
				ul.list-unstyled.list-inline.text-center
					li
						a(href="")
							i.fa(class="fa fa-"+icon1,data-target="#myCarousel" data-slide-to="0")
					li
						h5= texto1
					li
						a(href="")
							i.fa(class="fa fa-"+icon2,data-target="#myCarousel" data-slide-to="0")
			.col-md-5.col-xs-5
				hr
		else if li==5
			.col-md-4.col-xs-4
				hr
			.col-md-4.col-xs-4
				ul.list-unstyled.list-inline
					li
						a(href="")
							i.fa(class="fa fa-"+icon1,data-target="#myCarousel" data-slide-to="0")
					li
						h5= texto1
					li
						h5= texto2
					li
						h5= texto3
					li
						a(href="")
							i.fa(class="fa fa-"+icon2,data-target="#myCarousel" data-slide-to="1")

			.col-md-4.col-xs-4
				hr

